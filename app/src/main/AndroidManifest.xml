<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bounce"
    tools:ignore="MissingLeanbackLauncher">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bounce">
        <activity
            android:name=".Redeem"
            android:exported="false" />
        <activity
            android:name=".PatronCommentReview"
            android:exported="false" />
        <activity
            android:name=".BarInfo"
            android:exported="true" />
        <activity
            android:name=".BarSideMain"
            android:exported="true" />
        <activity
            android:name=".ContentMainPage"
            android:exported="true" />
        <activity
            android:name=".HomePage"
            android:exported="true" />
        <activity
            android:name=".BarOnboarding"
            android:exported="true" />
        <activity
            android:name=".PatronOnboarding"
            android:exported="true" />
        <activity
            android:name=".SignInPage"
            android:exported="true" />
        <activity
            android:name=".PostStatus"
            android:exported="true" />
        <activity
            android:name=".StatusIndividual"
            android:exported="true" />
        <activity
            android:name=".FeedbackMain"
            android:exported="true" />
        <activity
            android:name=".ReviewMainPage"
            android:exported="true" />
        <activity
            android:name=".ReviewResponse"
            android:exported="true" />
        <activity
            android:name=".StatusMain"
            android:exported="true" />
        <activity
            android:name=".LoadingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>